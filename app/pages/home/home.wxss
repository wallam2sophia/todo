/* pages/home/home.wxss */
.home-container {
  padding: 10rpx 40rpx;
  /* background-image: url("../../static/imgs/home-bg.png"); */
}

.user-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.nickname {
  color: #000;
}
.box-title {
  margin-top:40rpx;
  margin-left:20rpx;
  /* color:#ff5722; */
}
.task-lists {
  margin-top: 20rpx;

}

.task-item {
  /* border:1px solid #ddd; */
  border-radius: 5rpx;
}

.task-row {
  display: flex;
  margin-bottom: 10rpx;
  justify-content: start;
  align-items: center;
  position: relative;
}

.task-title {
  font-size: 36rpx;
}

.task-creator {
  color: #ff5722;
}

.task-period {
  color: #3f51b5;
}

.my-btn {
  font-size: 32rpx !important;
  font-weight: 200;
  color: #fff;
  /* border-top-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx; */
  border-radius: 50rpx !important;
  padding: 0rpx 35rpx !important;
  line-height:2 !important;
  position: absolute;
  right: 20rpx;
}

.primary-btn {
  background: linear-gradient(to right, #114fad, #0073d1);
}
.disabled-btn {
  color:#fff !important;
  background: linear-gradient(to right, #ededed, #bdbdbd);
}
.add-task {
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  z-index: 999;
}